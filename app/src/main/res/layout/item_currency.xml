<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/abbreviation"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_drag_drop"
        app:layout_constraintBottom_toBottomOf="@id/image_drag_drop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cur_name"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        tools:text="RUR"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:gravity="center"
        />
    
    <TextView
        android:id="@+id/cur_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_drag_drop"
        app:layout_constraintBottom_toBottomOf="@id/image_drag_drop"
        app:layout_constraintStart_toEndOf="@id/abbreviation"
        app:layout_constraintEnd_toStartOf="@id/cur_value_old"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        tools:text="Российский рубль"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cur_value_old"
        android:layout_width="@dimen/width_horizontal_collum"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_drag_drop"
        app:layout_constraintBottom_toBottomOf="@id/image_drag_drop"
        app:layout_constraintStart_toEndOf="@id/cur_name"
        app:layout_constraintEnd_toStartOf="@id/cur_value_new"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        tools:text="0,001"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cur_value_new"
        android:layout_width="@dimen/width_horizontal_collum"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_drag_drop"
        app:layout_constraintBottom_toBottomOf="@id/image_drag_drop"
        app:layout_constraintStart_toEndOf="@id/cur_value_old"
        app:layout_constraintEnd_toStartOf="@id/image_drag_drop"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        tools:text="0,001"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:gravity="center"
        />
    
    <ImageView
        android:id="@+id/image_drag_drop"
        android:layout_width="@dimen/width_horizontal_collum_end"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cur_value_new"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        android:src="@drawable/ic_baseline_drag_indicator_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>