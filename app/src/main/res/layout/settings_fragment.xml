<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/primaryLightBrand"
    tools:context=".presentation.ui.settings.SettingsFragment"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/header_fav"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        android:layout_marginVertical="5dp"
        android:gravity="start"
        tools:text="Перечень доступных валют: "
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_fav"
        android:layout_width="@dimen/width_horizontal_collum"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toEndOf="@id/header"
        app:layout_constraintEnd_toStartOf="@id/header_order"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        tools:text="Favorite"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_order"
        android:layout_width="@dimen/width_horizontal_collum"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_fav"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="@dimen/margin_start_horizontal_collum"
        android:gravity="center"
        tools:text="Order"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="header, header_fav, header_order"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_settings"
        />

</androidx.constraintlayout.widget.ConstraintLayout>